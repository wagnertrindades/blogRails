<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :name, "Nome" %><br>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :body, "Comentário" %><br>
        <%= f.text_area :body %>
    </p>
    <br>
    <p>
        <%= f.submit "Criar Comentário" %>
    </p>
<% end %>