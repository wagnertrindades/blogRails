
<div class="comment clearfix">
    <div class="comment_content">
        <p class="comment_name"><strong><%= comment.name %></strong></p>
        <p class="comment_body"><%= comment.body %></p>
        <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> atrás</p>
    </div>
    
    <% if user_signed_in? %>
        <p>
            <%= link_to 'Apagar', [comment.post, comment], 
                         method: :delete, 
                         class:"button",
                         data: { confirm: "Você deseja realmente apagar este comentário?"} 
            %>
        </p>
    <% end %>
</div>