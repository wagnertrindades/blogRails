<div id="post_content">
    <h1 class="title">
        <%= @post.title %>
    </h1>

    <p class="date">
        Criado há <%= time_ago_in_words(@post.created_at) %> atrás
        <% if user_signed_in? %>
            | <%= link_to 'Editar', edit_post_path(@post) %>
            | <%= link_to 'Apagar', post_path(@post), method: :delete, data: { confirm: 'Você tem certeza disso?'} %>
        <% end %>
    </p>

    <p class="body">
        <%= simple_format(@post.body) %>
    </p>

    <div id="comments">
        <h2><%= pluralize(@post.comments.count, 'Comentário')%></h2>
        <%= render @post.comments %>

        <h3>Adicionar comentário:</h3>
        <%= render 'comments/form' %>
    </div>
</div>